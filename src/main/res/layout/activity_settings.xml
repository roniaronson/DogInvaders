<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_backround"
    tools:context=".activities.Activity_Settings">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_LBL_dogInvanders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/space2"
            android:text="Dog Invanders"
            android:textColor="@color/black"
            android:textSize="45dp" />


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/settings_SW_sensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:checked="false"
            android:fontFamily="@font/space2"
            android:text="Sensors"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <RadioGroup
            android:id="@+id/settings_RG_slowOrFast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:checkedButton="@+id/settings_RB_slow">

            <RadioButton
                android:id="@+id/settings_RB_slow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:buttonTint="@color/black"
                android:fontFamily="@font/space2"
                android:text="Slow"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/settings_RB_Fast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:buttonTint="@color/black"
                android:fontFamily="@font/space2"
                android:text="Fast"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/settings_LBL_pickYourPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/space2"
            android:text="Pick Your Player:"
            android:textColor="@color/black"
            android:textSize="30dp"

            />

        <LinearLayout
            android:id="@+id/Menu_LL_dogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Menu_BTN_poodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                app:srcCompat="@drawable/poodlenew" />

            <ImageButton
                android:id="@+id/Menu_BTN_bulldog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                app:srcCompat="@drawable/img_bulldog" />

            <ImageButton
                android:id="@+id/Menu_BTN_borderCollie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                app:srcCompat="@drawable/img_bordercollie" />

        </LinearLayout>

        <EditText
            android:id="@+id/Settings_Etxt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="30dp"
            android:inputType="textPersonName"
            android:text="Name"
            />


    </LinearLayout>
</RelativeLayout>